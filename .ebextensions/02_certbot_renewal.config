container_commands:
  01_create_renewal_directory:
    command: "mkdir -p /var/www/html/.well-known/acme-challenge"
    ignoreErrors: true
  02_set_permissions:
    command: "chmod -R 755 /var/www/html/.well-known"
    ignoreErrors: true
  03_setup_certbot_cron:
    command: "echo '0 3 * * * /usr/bin/certbot renew --quiet --post-hook \"systemctl reload nginx\"' > /etc/cron.d/certbot_renewal"
    ignoreErrors: true
  04_set_cron_permissions:
    command: "chmod 644 /etc/cron.d/certbot_renewal"
    ignoreErrors: true